{
    "contributions": [
        {
            "id": "TranslateButton",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Azure Translator API Action Button",
                "uri": "dist/TranslateButton/translate-button.html",
                "inputs": [
                    {
                        "id": "ButtonTitle",
                        "name": "Text you want displayed on the button",
                        "description": "Text you want displayed on the button",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "SourceFields",
                        "name": "Fields of the work item you want to translate (comma separated)",
                        "description": "Fields of the work item you want to translate (comma separated).",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "AzureTranslatorApiEndpoint",
                        "name": "URL you want to send your data to",
                        "description": "URL you want to send your data to",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "SourceLanguage",
                        "name": "The language of the original text",
                        "description": "The language of the original text that should be translated.",
                        "properties": {
                            "workItemFieldTypes": ["PicklistString"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        },
                        "items": [
                            "English",
                            "German",
                            "Croatian"
                        ]
                    },
                    {
                        "id": "TargetLanguage",
                        "name": "The language of the translated text",
                        "description": "The language that the text should be translated to.",
                        "properties": {
                            "workItemFieldTypes": ["PicklistString"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        },
                        "items": [
                            "English",
                            "German",
                            "Croatian"
                        ]
                    }
                ]
            }
        }
    ],
    "scopes": [
        "vso.work"
    ]
}