{
    "manifestVersion": 1,
    "id": "azure-translator-api-extension",
    "publisher": "FactoryX",
    "version": "1.0.4",
    "name": "Azure Translator API Action Button",
    "description": "A configurable extension that provides an action button for translating fields by using Azure AI Translator API",
    "public": false,
    "categories": ["Azure Boards"],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "assets/azure-translator.jpeg"
    },
    "tags": [
        "action button",
        "translation",
        "Azure AI"
    ],
    "contributions": [
        {
            "id": "azure-translator-api-work-item-form-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Azure Translator API Action Button",
                "uri": "workItemControl.html",
                "height": 50,
                "inputs": [
                    {
                        "id": "FieldName",
                        "name": "The field containing text that should be translated",
                        "description": "The field containing text that should be translated.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "SourceLanguage",
                        "description": "The language of the original text that should be translated.",
                        "properties": {
                            "workItemFieldTypes": ["PicklistString"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        },
                        "items": [
                            "English",
                            "German",
                            "Croatian"
                        ]
                    },
                    {
                        "id": "TargetLanguage",
                        "description": "The language that the text should be translated to.",
                        "properties": {
                            "workItemFieldTypes": ["PicklistString"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        },
                        "items": [
                            "English",
                            "German",
                            "Croatian"
                        ]
                    }
                ]
            }
        }
    ],
    "files": [
        {
            "path": "workItemControl.html",
            "addressable": true
        },
        {
            "path": "node_modules/azure-devops-extension-sdk",
            "addressable": true,
            "packagePath": "lib"
        }
    ]
}